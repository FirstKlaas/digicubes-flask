{% extends "admin/base.jinja" %}

{% block page_title %}
Course Details
{% endblock %}
{% block space_name %}{{ course.name | nonefilter }}{% endblock %}


{% block main_content %}

<div class="section">
    <div class="row">
        <div class="col s12 dc-menu">
            <a class="dc-menu-item" href="{{ url_for('school.get', school_id=school.id) }}">Back to {{  school.name }}</a>
            <a class="dc-menu-item" href="{{ url_for('admin.update_school_course', school_id=school.id, course_id=course.id) }}">Edit Course</a>
            <a class="dc-menu-item" href="{{ url_for('teacher.create_course_unit', school_id=school.id, course_id=course.id) }}">New Unit</a>
            
        </div>
    </div>
    <div class="row">
        <div class="col s12 dc-md">
            <p>
            {{ course.description | md }}
            </p>
        </div>
    </div>
</div>

<div class="section">
    <div class="row">
        <div class="col s12">
            <h2>Units</h2>
        </div>
        <div class="col s12">
            {% if units %}
                <table class="highlight">
                    <thead>
                    <tr>
                        <th style="width: 20em;">Name</th>
                        <th style="width: 60em;">Short Description</th>
                        {% if has_right("course_delete") %}
                        <th style="width: 4em;"></th>
                        {% endif %}
                        
                    </tr>
                    <tbody class="dc-vtop">
                    {% for unit in units %}
                    <tr>
                        <td>
                            <a href="{{ url_for('unit.display_course_unit', school_id=school.id, course_id=course.id, unit_id=unit.id) }}">
                                {{ unit.position }} - {{ unit.name | nonefilter }}
                            </a>
                        </td>
                        <td class="dc-md">{{ unit.short_description | md }}</td>
                        {% if has_right("course_delete") %}
                        <td>
                            <a href="{{ url_for('unit.delete_course_unit', school_id=school.id, course_id=course.id, unit_id=unit.id) }}">
                                <i class="material-icons red-text text-darken-3">delete</i>
                            </a>
                        </td>
                        {% endif %}
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                No Units
            {% endif %}
        </div>
        
    </div>
</div>

{% endblock %}
