{% extends "admin/base.jinja" %}

{% block page_title %}
Rights
{% endblock %}


{% block main_content %}
<div class="section">
    <table class="highlight">
        <thead>
            <tr>                
                <th >Name</th>
                <th >Created at</th>                
                <th class="right-align">Action</th>
            </tr>
        </thead>
        <tbody class="dc-thin">
        {% for right in rights %}
        <tr>
            <td>{{ right.name }}</td>            
            <td>{{ right.created_at }}</td>            
            <td class="right-align dc-icon-column">
                <i class="material-icons red-text text-darken-3">delete</i>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>   
</div> 
{% endblock %}        

