{% extends "admin/base.jinja" %}
{% import "macros/menu.jinja" as menu %}

{% macro info_row(label, value) %}
<div class="row"  style="margin-bottom: 5px !important">
    <div class="col s2">{{ label }}:</div>
    <div class="col s10">{{ value }}</div>
</div>
{% endmacro %}

{% macro info_link_row(label, value, url) %}
<div class="row"  style="margin-bottom: 5px !important">
    <div class="col s2">{{ label }}:</div>
    <div class="col s10"><a href="{{ url }}">{{ value }}</a></div>
</div>
{% endmacro %}

{% block page_title %}{{ unit.name }}{% endblock %}
{% block space_name %}{{ unit.name }}{% endblock %}


{% block main_content %}
<div class="section">
  <div class="row">
    <div class="col s12">
      {{ menu.button(url_for('unit.update', school_id=school.id, course_id=course.id, unit_id=unit.id), "Edit") }}
    </div>
  </div>
</div>

{# Header info for this unit #}
<div class="section">
    {{ info_link_row("Schule", school.name, url_for('school.get', school_id=school.id)) }}
    {{ info_link_row("Kurs", course.name, url_for('course.get', school_id=school.id, course_id=course.id)) }}
    {{ info_row("Unit Name", unit.name) }}
    {{ info_row("Kurz Beschreibung", md(unit.short_description)) }}
    {{ info_row("Lang Beschreibung", md(unit.long_description)) }}
    {{ info_row("Angelegt am", unit.created_at) }}
    {{ info_row("Zuletzt ge√§ndert", unit.modified_at) }}
</div>

{% endblock %}   

